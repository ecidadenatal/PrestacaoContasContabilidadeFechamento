select 
	k13_conta, 
	k13_descr, 
	mes || '/' || exercicio as mesano, 
	(case status when 1 then 'Prestado Conta' 
						else 'Em diligência' end) as status, 
	coalesce(motivo, '-') as motivo
from plugins.prestacaocontascontabilidadefechamento 
 	inner join saltes on k13_conta = reduzido
where k13_conta = $conta and exercicio = $ano
order by exercicio, mes;

--------------------------------

select
	k13_conta, 
	k13_descr,
	(case when pccf.mes is null then 'Não prestou contas'
		  else pccf.mes || '/' || pccf.ano end) as mesano
from saltes
	inner join empagetipo on k13_conta = e83_conta
	 left join (select max(mes) as mes, max(exercicio) as ano, reduzido
	 			from plugins.prestacaocontascontabilidadefechamento 
	 			where exercicio = $ano
	 			group by reduzido) pccf on pccf.reduzido = k13_conta
order by k13_conta;